<%- include('partial/navbar') %>

<main class="flex-1 overflow-y-auto p-6">
    <style>
        body { font-family: Arial, sans-serif; }
        form, table { margin: 20px auto; width: 60%; }
        input[type="text"] { width: 70%; padding: 8px; }
        input[type="submit"], .btn { padding: 8px 16px; margin-left: 8px; }
        table { border-collapse: collapse; width: 60%; }
        table, th, td { border: 1px solid #999; }
        th, td { padding: 10px; text-align: left; }
        .actions form { display: inline; }
    </style>


<h2 style="text-align:center;">Add New Category</h2>
<form action="/admin/category/create" method="POST">
    <input type="text" name="name" placeholder="Enter category name" required />
   <button type="submit" class="btn btn-primary">Submit</button>
</form>

<h2 style="text-align:center;">Category List</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% categories.forEach(category => { %>
            <tr>
                <td><%= category.name %></td>
                <td><%= category.createdAt.toLocaleString() %></td>
                <td>
                    <a href="/admin/category/edit/<%= category._id %>" class="btn btn-primary">Edit</a>
                    <a href="/admin/category/delete/<%= category._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
                </td>
            </tr>
        <% }) %>
    </tbody>
    
</table>


</main>



